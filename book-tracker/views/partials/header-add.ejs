<header class="header-add">  
  <h1>Add a Book</h1>

  <form action="/books/search" method="GET" class="add-search-form">
    <input
      type="text"
      name="query"
      placeholder="Search by ISBN or Book Title"
      required
      autofocus
      class="add-search-input"
    />
    <button type="submit" class="add-search-btn">Search</button>
  </form>

  <% if (!bookData && !message) { %>
    <%- include("../partials/form-actions", { showSubmit: false, submitLabel: "+ Add Book" }) %>
  <% } %>  
</header>
